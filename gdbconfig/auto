if $file_exists("./.gdbsetup")
    source .gdbsetup
end
if $file_exists("./.gdbsetup_src")
    source .gdbsetup_src
end

dashboard -enabled on
dashboard -style prompt 'gdb>'

dashboard -style syntax_highlighting "paraiso-dark"

define dsource
    dashboard -layout source stack breakpoints history variables expressions threads

    dashboard history -style limit 5

    dashboard variables -style compact False
    dashboard variables -style align True
    dashboard variables -style arguments False
    dashboard variables -style locals True

    dashboard stack -style limit 3
    dashboard stack -style arguments True
    dashboard stack -style compact False

    dashboard source -style highlight-line True
    dashboard source -style height 25

end

dsource
